<form class="form-inline productBlockForm">
    <div class="control-group">
       <label class="control-label" for="key">Блок с товарами:</label>
       <div class="controls">
           <input class="productBlockName" id='productBlock${counter}' value="" type="text" name="name"/>
           <input class="productBlockId" value="0" type="hidden" name="product_block_id" />
           <span class="help"></span>
       </div>
    </div>
    <div class="control-group">
        <div class="btn saveProductBlock">
            <i class="icon-ok" title="Сохранить связку с мини-блоком"></i>
        </div>
        <div class="btn deleteProductBlock">
            <i class="icon-remove" title="Удалить связку с мини-блоком"></i>
        </div>
    </div>
</form>