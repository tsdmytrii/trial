<div class="modal set_component">
    <form class="set_conect_menu_item form-horizontal">
        <div class="modal-header">
            <i class="icon-remove menu_icon close_window"></i>
            <h3>Связать "${page}" с пунктом меню</h3>
        </div>
        <div class="modal-body">
            <div class="control-group">
                <label class="control-label" for="inputEmail">Пункт меню</label>
                <div class="controls">
                    <input id="menu_item" type="text" name="name" placeholder="Пункт меню" value="">
                    <input type="hidden" name="menu_item_id" value="" id="menu_item_id">
                    <input type="hidden" name="component_id" value="${component_id}">
                    <span class="error"></span>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <input type="submit" class="btn btn-primary" value="Сохранить" />
            <input type="button" class="btn cancel" value="Отмена" />
        </div>
    </form>
</div>