<div style="padding: 0 20px;">
    <form class="form-horizontal" id="menuBlockForm">

        <table class="table table-striped table-bordered table-hover table-condensed" style="margin-top: 15px; ">
            <thead class="table-head">
                <tr>
                    <th>
                        Информация о меню-блоке
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>

                        <input type="hidden" value="{{if our_data}}${our_data.id}{{/if}}" name="id" />

                        <div class="control-group">
                            <div class="control-label">
                                <label for="name">Название меню-блока:</label>
                            </div>
                            <div class="controls">
                                <input type="text" value="{{if our_data}}${our_data.name}{{/if}}" name="name" />
                                <span class="help help-block"></span>
                            </div>
                        </div>

                        <div class="control-group">
                            <div class="control-label">
                                <label for="position">Позиция:</label>
                            </div>
                            <div class="controls">
                                <input type="text" value="{{if our_data}}${our_data.position}{{/if}}" name="position" />
                                <span class="help help-block"></span>
                            </div>
                        </div>

                    </td>
                </tr>
            </tbody>
        </table>

        <div class="form-actions">
            <div class="pull-right">
                <button class="btn btn-primary" type="submit">Сохранить изменения</button>
                <div class="btn cancel">Отмена</div>
            </div>
        </div>

    </form>
</div>